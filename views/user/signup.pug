extends ../layouts/common

block content
    .row
        .col-sm-4.col-md-offset-4
        .col-sm-4.col-md-offset-4.mt-5.bg-light
            h1.text-center.mt-5 Signup
            if hasErrors
                each message in messages
                     .alert.alert-danger=message
            form.mt-5(action='/user/signup', method='POST')
                .mb-3
                    label.form-label(for='email') Email address
                    input#email.form-control(name='email', type='text')
                .mb-3
                    label.form-label(for='password') Password
                    input#password.form-control(name='password', type='password')
                    input(name='_csrf', type='hidden', value=csrfToken)
                .text-center
                    button.btn.btn-primary(style='width: 50%;') Signup
        .col-sm-4.col-md-offset-4
